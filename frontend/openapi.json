{
  "openapi": "3.0.0",
  "info": {
    "title": "Image Processor API",
    "version": "1.0.0",
    "description": "OpenAPI specification for Image Processor backend"
  },
  "servers": [
    { "url": "http://localhost:5700", "description": "Local backend server" }
  ],
  "paths": {
    "/api/images": {
      "get": {
        "operationId": "getImages",
        "responses": {
          "200": {
            "description": "List of image metadata",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/ImageMeta" }
                }
              }
            }
          }
        }
      }
    },
    "/api/images/{id}/dialog": {
    "get": {
      "operationId": "getImageDialog",
      "parameters": [
        { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
      ],
      "responses": {
        "200": {
          "description": "Dialog entries",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "dialog": { "type": "array", "items": { "type": "string" } }
                },
                "required": ["dialog"]
              }
            }
          }
        }
      }
    },
    "post": {
      "operationId": "setImageDialog",
      "parameters": [
        { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "dialog": { "type": "array", "items": { "type": "string" } }
              },
              "required": ["dialog"]
            }
          }
        }
      },
      "responses": {
        "200": { "description": "Dialog saved" }
      }
    }
    },
    "/api/images/{id}/reorder": {
      "post": {
        "operationId": "reorderImage",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "path", "in": "query", "required": false, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "prev_id": { "type": ["string", "null"] },
                  "next_id": { "type": ["string", "null"] }
                },
                "required": ["prev_id", "next_id"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Reorder complete" }
        }
      }
    },
    "/api/images/{id}": {
      "delete": {
        "operationId": "deleteImage",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "path", "in": "query", "required": false, "schema": { "type": "string" } }
        ],
        "responses": {
          "204": { "description": "Image deleted" }
        }
      }
    },
    "/api/path": {
      "get": {
        "operationId": "getDefaultPath",
        "responses": {
          "200": {
            "description": "Default path response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "path": { "type": "string" }
                  },
                  "required": ["path"]
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ImageMeta": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "timestamp": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "url", "timestamp"]
      }
    }
  }
}